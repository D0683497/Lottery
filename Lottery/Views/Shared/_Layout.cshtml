@{
    Layout = "_HTML";
}

@section Styles {
    @await RenderSectionAsync("Styles", required: false)
}

<section class="hero is-fullheight">
    <header class="hero-head">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="container">
                <div class="navbar-brand">
                    <span class="navbar-item py-0">
                        <a class="title" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/ssc-logo-dark.svg" alt="" height="28"/>
                        </a>
                    </span>
                    <a role="button" class="navbar-burger" aria-label="menu" aria-expanded="false" data-target="navMenu">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>
                <div id="navMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <span class="navbar-item">
                            <a class="button" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="icon">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span>首頁</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button" asp-area="" asp-controller="Home" asp-action="Privacy" target="_blank">
                                <span class="icon">
                                    <i class="fas fa-shield-alt"></i>
                                </span>
                                <span>隱私權</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button" asp-area="" asp-controller="Home" asp-action="Credits" target="_blank">
                                <span class="icon">
                                    <i class="fas fa-balance-scale"></i>
                                </span>
                                <span>原始碼</span>
                            </a>
                        </span>
                        @if (User.IsInRole("Administrator"))
                        {
                            <span class="navbar-item">
                                <a class="button is-warning is-light" asp-area="" asp-controller="Manage" asp-action="Index">
                                    <span class="icon">
                                        <i class="fas fa-cogs"></i>
                                    </span>
                                    <span>管理</span>
                                </a>
                            </span>
                        }
                        <span class="navbar-item">
                            @if (User.Claims.Any(x => x.Type == Microsoft.IdentityModel.JsonWebTokens.JwtRegisteredClaimNames.Jti))
                            {
                                <a class="button is-primary is-light" asp-area="" asp-controller="Account" asp-action="Logout">
                                    <span class="icon">
                                        <i class="fas fa-sign-out-alt"></i>
                                    </span>
                                    <span>登出</span>
                                </a>
                            }
                            else
                            {
                                <a class="button is-primary" asp-area="" asp-controller="Account" asp-action="Login">
                                    <span class="icon">
                                        <i class="fas fa-sign-in-alt"></i>
                                    </span>
                                    <span>登入</span>
                                </a>
                            }
                        </span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="hero-body">
        <div class="container is-max-desktop">
            @RenderBody()
        </div>
    </main>
    <footer class="hero-foot">
        <div class="content has-text-centered">
            <p>Copyright &copy; 2021 成就學生中心</p>
        </div>
    </footer>
</section>

@section Scripts {
    @await RenderSectionAsync("Scripts", required: false)
}