@model EventEditViewModel
@{
    ViewData["Title"] = "編輯活動";
    var eventId = @Context.Request.RouteValues["eventId"];
}

<nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
        <li><a asp-area="" asp-controller="Manage" asp-action="Index">管理</a></li>
        <li><a asp-area="" asp-controller="Event" asp-action="Index">管理活動</a></li>
        <li><a asp-area="" asp-controller="Event" asp-action="Detail" asp-route-eventId="@eventId">活動詳情</a></li>
        <li class="is-active"><a asp-area="" asp-controller="Event" asp-action="Edit" asp-route-eventId="@eventId" aria-current="page">@ViewData["Title"]</a></li>
    </ul>
</nav>
<h1 class="title is-3">@ViewData["Title"]</h1>
<hr />
<div class="box">
    <form asp-area="" asp-controller="Event" asp-action="Edit" asp-route-eventId="@eventId" method="post" role="form">
        <div class="field mb-5">
            <label asp-for="End" class="label">狀態</label>
            <div class="control">
                <div class="select is-fullwidth">
                    <select asp-for="End">
                        <option value="false">進行中</option>
                        <option value="true">已結束</option>
                    </select>
                </div>
            </div>
            <span asp-validation-for="End" class="help is-danger"></span>
        </div>
        <div class="field mb-5">
            <label asp-for="Title" class="label">標題</label>
            <div class="control">
                <input asp-for="Title" class="input" type="text" placeholder="請輸入標題" />
            </div>
            <span asp-validation-for="Title" class="help is-danger"></span>
        </div>
        <div class="field mb-5">
            <label asp-for="SubTitle" class="label">副標題</label>
            <div class="control">
                <textarea asp-for="SubTitle" class="textarea" placeholder="請輸入副標題"></textarea>
            </div>
            <span asp-validation-for="SubTitle" class="help is-danger"></span>
        </div>
        <div class="field mb-5">
            <label asp-for="Url" class="label">網址</label>
            <div class="control">
                <input asp-for="Url" class="input" type="text" placeholder="請輸入網址" />
            </div>
            <p class="help">活動網址為 https://sscurl.fcu.edu.tw/event/ 加上上面所輸入網址</p>
            <span asp-validation-for="Url" class="help is-danger"></span>
        </div>
        <div class="field">
            <div class="control">
                <button class="button is-link" type="submit">修改</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}