@{
    ViewData["Title"] = "活動";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/event.css" asp-append-version="true" />
}

<section class="hero is-primary is-fullheight">
    <header class="hero-head">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="container">
                <div class="navbar-brand">
                    <span class="navbar-item py-0">
                        <a class="title" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/ssc-logo-light.svg" alt="" height="28" />
                        </a>
                    </span>
                    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>
                <div id="navMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="icon">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span>首頁</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" asp-area="" asp-controller="Home" asp-action="Privacy" target="_blank">
                                <span class="icon">
                                    <i class="fas fa-shield-alt"></i>
                                </span>
                                <span>隱私權</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" asp-area="" asp-controller="Home" asp-action="Credits">
                                <span class="icon">
                                    <i class="fas fa-balance-scale"></i>
                                </span>
                                <span>原始碼</span>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="hero-body">
        <div class="container is-max-desktop">
            <h1 class="title mb-6 has-text-centered">2021 新鮮人成長營</h1>
            <h2 class="subtitle my-6 has-text-centered">這邊可以打字</h2>
            <form class="my-6">
                <div class="field has-addons">
                    <div class="control has-icons-left is-expanded">
                        <input class="input" type="text" placeholder="請輸入學號">
                        <span class="icon is-left">
                            <i class="fas fa-user"></i>
                        </span>
                    </div>
                    <div class="control">
                        <button class="button is-primary" asp-area="" asp-controller="Event" asp-action="Participant">
                            <span class="icon">
                                <i class="fas fa-search"></i>
                            </span>
                            <span>查詢</span>
                        </button>
                    </div>
                </div>
            </form>
            <nav class="buttons is-centered">
                <a class="button is-black is-outlined has-background-grey-lighter is-large is-underlined">管理活動</a>
                <a class="button is-black is-outlined has-background-grey-lighter is-large is-underlined">開始抽獎</a>
                <a class="button is-black is-outlined has-background-grey-lighter is-large is-underlined">管理講池</a>
            </nav>
        </div>
    </main>
    <footer class="hero-foot">
        <div class="content has-text-centered">
            <p>Copyright &copy; 2021 成就學生中心</p>
        </div>
    </footer>
</section>

@section Scripts {
}