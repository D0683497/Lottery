@{
    ViewData["Title"] = "活動";
}

@section Styles {
    <link rel="stylesheet" type="text/css" href="~/css/event.css" asp-append-version="true" />
}

<section class="hero is-primary is-fullheight">
    <header class="hero-head">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="container">
                <div class="navbar-brand">
                    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>
                <div id="navMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="icon">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span>首頁</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" asp-area="" asp-controller="Home" asp-action="Privacy" target="_blank">
                                <span class="icon">
                                    <i class="fas fa-shield-alt"></i>
                                </span>
                                <span>隱私權</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-white is-outlined" asp-area="" asp-controller="Home" asp-action="Credits">
                                <span class="icon">
                                    <i class="fas fa-balance-scale"></i>
                                </span>
                                <span>原始碼</span>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="hero-body">
        <div class="container has-text-centered">
            <div class="column is-6 is-offset-3">
                <h1 class="title mb-6">2021 新鮮人成長營</h1>
                <h2 class="subtitle my-6">這邊可以打字</h2>
                <form class="mt-6">
                    <div class="field has-addons">
                        <div class="control has-icons-left is-expanded">
                            <input class="input" type="text" placeholder="請輸入學號">
                            <span class="icon is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                        <div class="control">
                            <button class="button is-primary" asp-area="" asp-controller="Event" asp-action="Participant">
                                <span class="icon">
                                    <i class="fas fa-search"></i>
                                </span>
                                <span>查詢</span>
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </main>
    <footer class="hero-foot">
        <nav class="tabs is-centered is-toggle is-toggle-rounded">
            <div class="container">
                <ul>
                    <li><a class="has-background-grey">管理活動</a></li>
                    <li><a class="has-background-primary has-text-black">開始抽獎</a></li>
                    <li><a class="has-background-grey">管理講池</a></li>
                </ul>
            </div>
        </nav>
    </footer>
</section>

@section Scripts {
}