@{
    ViewData["Title"] = "管理";
}

<h1 class="title is-3">@ViewData["Title"]</h1>
<hr />
<div class="box content">
    <div class="columns is-multiline is-centered">
        <div class="column is-4">
            <figure class="image">
                <i class="fas fa-server fa-7x"></i>
            </figure>
            <a class="button is-link is-inverted is-fullwidth is-underlined">日誌</a>
        </div>
        <div class="column is-4">
            <figure class="image">
                <i class="fas fa-cog fa-7x"></i>
            </figure>
            <a asp-area="" asp-controller="Manage" asp-action="Setting" class="button is-link is-inverted is-fullwidth is-underlined">網站設定</a>
        </div>
        <div class="column is-4">
            <figure class="image">
                <i class="fas fa-users-cog fa-7x"></i>
            </figure>
            <a class="button is-link is-inverted is-fullwidth is-underlined">使用者</a>
        </div>
        <div class="column is-4">
            <figure class="image">
                <i class="fas fa-book fa-7x"></i>
            </figure>
            <a asp-area="" asp-controller="Manage" asp-action="Event" class="button is-link is-inverted is-fullwidth is-underlined">活動</a>
        </div>
        <div class="column is-4">
            <figure class="image">
                <i class="fab fa-wpforms fa-7x"></i>
            </figure>
            <a asp-area="" asp-controller="Manage" asp-action="Apply" class="button is-link is-inverted is-fullwidth is-underlined">申請表</a>
        </div>
    </div>
</div>