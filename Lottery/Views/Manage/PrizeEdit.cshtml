@model PrizeEditViewModel
@{
    ViewData["Title"] = "編輯獎品";
}

<nav class="breadcrumb" aria-label="breadcrumbs">
    <ul>
        <li><a asp-area="" asp-controller="Manage" asp-action="Index">管理</a></li>
        <li><a asp-area="" asp-controller="Manage" asp-action="Event">管理活動</a></li>
        <li><a asp-area="" asp-controller="Manage" asp-action="EventDetail" asp-route-eventId="@Context.Request.RouteValues["eventId"]">活動詳情</a></li>
        <li><a asp-area="" asp-controller="Manage" asp-action="Pool" asp-route-eventId="@Context.Request.RouteValues["eventId"]">管理獎池</a></li>
        <li><a asp-area="" asp-controller="Manage" asp-action="PoolDetail" asp-route-eventId="@Context.Request.RouteValues["eventId"]" asp-route-poolId="@Context.Request.RouteValues["poolId"]">獎池詳情</a></li>
        <li><a asp-area="" asp-controller="Manage" asp-action="Prize" asp-route-eventId="@Context.Request.RouteValues["eventId"]" asp-route-poolId="@Context.Request.RouteValues["poolId"]">管理獎品</a></li>
        <li class="is-active"><a asp-area="" asp-controller="Manage" asp-action="PrizeDetail" asp-route-eventId="@Context.Request.RouteValues["eventId"]" asp-route-poolId="@Context.Request.RouteValues["poolId"]" asp-route-prizeId="@Context.Request.RouteValues["prizeId"]">獎品詳情</a></li>
        <li class="is-active"><a asp-area="" asp-controller="Manage" asp-action="PrizeEdit" asp-route-eventId="@Context.Request.RouteValues["eventId"]" asp-route-poolId="@Context.Request.RouteValues["poolId"]" asp-route-prizeId="@Context.Request.RouteValues["prizeId"]" aria-current="page">@ViewData["Title"]</a></li>
    </ul>
</nav>
<h1 class="title is-3">@ViewData["Title"]</h1>
<hr />
<div class="box">
    <form asp-area="" asp-controller="Manage" asp-action="PrizeEdit" asp-route-eventId="@Context.Request.RouteValues["eventId"]" asp-route-poolId="@Context.Request.RouteValues["poolId"]" asp-route-prizeId="@Context.Request.RouteValues["prizeId"]" method="post" role="form">
        <div class="field mb-5">
            <label asp-for="Name" class="label">名稱</label>
            <div class="control">
                <input asp-for="Name" class="input" type="text" placeholder="請輸入名稱" />
            </div>
            <span asp-validation-for="Name" class="help is-danger"></span>
        </div>
        <div class="field mb-5">
            <label asp-for="Quantity" class="label">數量</label>
            <div class="control">
                <input asp-for="Quantity" class="input" type="number" placeholder="請輸入數量" />
            </div>
            <span asp-validation-for="Quantity" class="help is-danger"></span>
        </div>
        <div class="field">
            <div class="control">
                <button class="button is-link" type="submit">修改</button>
            </div>
        </div>
    </form>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}