@{
    ViewData["Title"] = "登入";
}

@section Styles {
}

<section class="hero">
    <header class="hero-head">
        <nav class="navbar" role="navigation" aria-label="main navigation">
            <div class="container">
                <div class="navbar-brand">
                    <span class="navbar-item py-0">
                        <a class="title" asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="~/images/ssc-logo-dark.svg" alt="" height="28" />
                        </a>
                    </span>
                    <a role="button" class="navbar-burger" data-target="navMenu" aria-label="menu" aria-expanded="false">
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                        <span aria-hidden="true"></span>
                    </a>
                </div>
                <div id="navMenu" class="navbar-menu">
                    <div class="navbar-end">
                        <span class="navbar-item">
                            <a class="button is-outlined" asp-area="" asp-controller="Home" asp-action="Index">
                                <span class="icon">
                                    <i class="fas fa-home"></i>
                                </span>
                                <span>首頁</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-outlined" asp-area="" asp-controller="Home" asp-action="Privacy" target="_blank">
                                <span class="icon">
                                    <i class="fas fa-shield-alt"></i>
                                </span>
                                <span>隱私權</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-outlined" asp-area="" asp-controller="Home" asp-action="Credits">
                                <span class="icon">
                                    <i class="fas fa-balance-scale"></i>
                                </span>
                                <span>原始碼</span>
                            </a>
                        </span>
                        <span class="navbar-item">
                            <a class="button is-primary" asp-area="" asp-controller="Account" asp-action="Login">
                                <span class="icon">
                                    <i class="fas fa-sign-in-alt"></i>
                                </span>
                                <span>登入</span>
                            </a>
                        </span>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <main class="hero-body">
        <div class="container is-max-desktop">
            <h1 class="title is-3 has-text-centered">@ViewData["Title"]</h1>
            <hr>
            <div class="box">
                <figure class="avatar mb-6 is-flex is-justify-content-center">
                    <img src="~/images/fcu-logo.png" width="128" height="128" alt="">
                </figure>
                <form>
                    <div class="field mb-5">
                        <label class="label">帳號</label>
                        <div class="control has-icons-left">
                            <input class="input" type="text" placeholder="請輸入帳號" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-user"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field mb-5">
                        <label class="label">密碼</label>
                        <div class="control has-icons-left">
                            <input class="input" type="password" placeholder="請輸入密碼" />
                            <span class="icon is-small is-left">
                                <i class="fas fa-lock"></i>
                            </span>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <button class="button is-info is-fullwidth" type="submit">登入</button>
                        </div>
                    </div>
                </form>
            </div>
            <div class="buttons is-centered">
                <a class="button is-text">忘記密碼</a>
                <a asp-area="" asp-controller="Home" asp-action="Apply" class="button is-text">申請使用</a>
            </div>
        </div>
    </main>
    <footer class="hero-foot">
        <div class="content has-text-centered">
            <p>Copyright &copy; 2021 成就學生中心</p>
        </div>
    </footer>
</section>

@section Scripts {
}